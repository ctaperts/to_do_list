
      <div class="well">

	<span class="task">
	  <%= link_to user_task.description, 
		      user_task,
		      remote: true,
		      method: :delete,
		      data: { confirm: "Are you sure?" } %>
	</span>




	<%= link_to fa_icon("pencil", text: "Edit"), 
		    edit_user_task_path(user_task), 
		    remote: true %>


	<span class="pull-right">
	  <%= user_task.due.stamp("Monday, June 1st, 2000") %>
	</span>
	<div style="display:none;" id="task-form-edit_<%= user_task.id %>"></div>
    </div>

