  <%= simple_form_for(@user_task, remote: true) do |f| %>
    <%= f.error_notification %>
  
    <div class="form-inputs">
      <%= f.input :description, as: :text, placeholder: "Make Grocerys" %>
      <%# f.input :due, as: :string, placeholder: "Today" %>
      <input name="user_task[due]" remote="true" id="user_task_due" type="string" data-provide='datepicker' >
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
